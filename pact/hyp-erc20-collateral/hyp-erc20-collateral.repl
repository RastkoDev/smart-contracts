(namespace "NAMESPACE")
(expect-failure "Has remote router" (hyp-erc20-collateral.has-remote-router "0"))
(env-sigs [ { "key": bridge-keys.bridge, "caps": [ (hyp-erc20-collateral.ONLY_ADMIN) ] } ])
(expect-failure "Domain cannot be zero" (hyp-erc20-collateral.enroll-remote-router "0" data.eth-router))
(expect-failure "Has remote router" (hyp-erc20-collateral.has-remote-router "0"))
(commit-tx)

;; enroll-remote-router ;; success
(begin-tx)
(namespace "NAMESPACE")
(expect-failure "Has remote router" (hyp-erc20-collateral.has-remote-router data.eth-domain))
(env-sigs [ { "key": bridge-keys.bridge, "caps": [ (hyp-erc20-collateral.ONLY_ADMIN) ] } ])
(hyp-erc20-collateral.enroll-remote-router data.eth-domain data.eth-router)
(expect "Has remote router" data.eth-router (hyp-erc20-collateral.has-remote-router data.eth-domain))
(commit-tx)

(begin-tx)
(namespace "NAMESPACE")
(env-sigs [ { "key": bridge-keys.bridge, "caps": [ (mailbox.ONLY_ADMIN) ] } ])
(mailbox.store-router hyp-erc20-collateral)
(commit-tx)

;; enroll-remote-router ;; edit
(begin-tx)
(namespace "NAMESPACE")
(expect "Has remote router" data.eth-router (hyp-erc20-collateral.has-remote-router data.eth-domain))
(env-sigs [ { "key": bridge-keys.bridge, "caps": [ (hyp-erc20-collateral.ONLY_ADMIN) ] } ])
(hyp-erc20-collateral.enroll-remote-router data.eth-domain data.eth-router-bis)
(expect "Has remote router" data.eth-router-bis (hyp-erc20-collateral.has-remote-router data.eth-domain))
(commit-tx)

;; quote-gas-payment
(begin-tx)
(namespace "NAMESPACE")
(expect "Charges 1 KDA for tx" 1.0 (hyp-erc20-collateral.quote-gas-payment data.eth-domain))
(commit-tx)

;; transfer-remote ;; transfer-from ;; success      
(begin-tx)
(namespace "NAMESPACE")
(expect "Alice balance before the dispatch" 1000.0 (hyp-erc20-collateral.get-balance bridge-keys.alice-principal))
(expect "Treasury balance before the dispatch" 0.0 (coin.get-balance (hyp-erc20-collateral.get-collateral-account)))
(env-sigs [ { "key": bridge-keys.alice, "caps": [ 
    (coin.TRANSFER 
        bridge-keys.alice-principal
        (hyp-erc20-collateral.get-collateral-account) 
        699.0
    )
    (coin.TRANSFER
        bridge-keys.alice-principal
        igp.IGP_ACCOUNT 
        (hyp-erc20-collateral.quote-gas-payment data.eth-domain)
    )
]}])
(env-chain-data { "sender": bridge-keys.alice-principal })
(mailbox.dispatch hyp-erc20-collateral data.eth-domain bridge-keys.alice 699.0)
(expect "Alice balance after the dispatch" 300.0 (hyp-erc20-collateral.get-balance bridge-keys.alice-principal))
(expect "Treasury balance after the dispatch" 699.0 (coin.get-balance (hyp-erc20-collateral.get-collateral-account)))
(commit-tx)

