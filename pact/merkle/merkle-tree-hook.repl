;; insert-node ;; success hyp-erc20-collateral
(begin-tx)
(namespace "NAMESPACE")
(expect "Count before the insertion" 0 (merkle-tree-hook.count))
(env-sigs [ { "key": bridge-keys.alice, "caps": [
    (coin.TRANSFER bridge-keys.alice-principal (hyp-erc20-collateral.get-collateral-account) 10.0)
    (coin.TRANSFER bridge-keys.alice-principal igp.IGP_ACCOUNT (igp.quote-gas-payment data.eth-domain))
    (router.TRANSFER_REMOTE data.eth-domain bridge-keys.alice-principal bridge-keys.alice 10.0)
    (hyp-erc20-collateral.TRANSFER_FROM bridge-keys.alice-principal 10.0)
]}])
(env-chain-data { "sender": bridge-keys.alice-principal })
(mailbox.dispatch hyp-erc20-collateral data.eth-domain bridge-keys.alice 10.0)
(expect "Count after the insertion" 1 (merkle-tree-hook.count))
(commit-tx)

