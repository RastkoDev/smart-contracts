(namespace "NAMESPACE")
(env-sigs [ { "key": bridge-keys.alice, "caps": [] } ])
(expect-failure "Does not have rights" (merkle-tree-hook.set-mailbox mailbox))
(commit-tx)

;; set-mailbox ;; success
(begin-tx)
(namespace "NAMESPACE")
(env-sigs [ { "key": bridge-keys.bridge, "caps": [ (merkle-tree-hook.ONLY_ADMIN) ] } ])
(merkle-tree-hook.set-mailbox mailbox)
(commit-tx)

